/* pages/personCenter/personCenter.wxss */
.center{
    padding-bottom: 150rpx;
}
.center-header{
    display: flex;
    box-sizing: border-box;
    flex-direction: column;
    height: 354rpx;
    text-align: center;
    border-bottom: 2rpx solid #ddd;
}

.user-img{
    width: 184rpx;
    height: 184rpx;
    border-radius: 92rpx;
    margin: 42rpx auto 14rpx;
}

.user-name{
    font-size: 30rpx;
}

.center-tab{
    display: flex;
    box-sizing: border-box;
    height: 94rpx;
    border-bottom: 2rpx solid #ddd;    
    box-shadow: 0 0 10rpx #ddd;
    text-align: center;
}

.tab-item{
    position: relative;
    flex-grow: 1;
    font-size: 36rpx;
    line-height: 94rpx;
    color: #aeaeae;
}

.tab-item-active{
    color: #489efd;
}

.tab-line::after{
    position: absolute;    
    content:'';    
    border-right: 2rpx solid #ddd;
    height: 64rpx;
    top: 50%;
    right: 0;
    transform: translate3d(0,-50%,0);    
}

.book-item {
    width: 188rpx;
    height: 266rpx;    
    background-color: #f2f2f2;
    box-shadow: 0 0 16rpx #ccc;
    margin-top:30rpx;
}

.add-book{
    background-position: center;
    background-image: url(/images/plus.png);
    background-repeat: no-repeat;    
}

.book-img{
    width: 100%;
    height: 100%;
}

.center-tab-content{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    flex-wrap: wrap;
    margin: 0 30rpx;
}

.btn-item{
  display: flex;
  flex-direction: column;  
  text-align: center;
  margin-top: 14rpx;
}

.btn-img {
  width: 59rpx;
  height: 59rpx;  
}

.btn-text{
  font-size: 24rpx;
}